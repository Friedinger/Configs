{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "rangeStrategy": "pin",
    "packageRules": [
        {
            "matchDepTypes": ["action"],
            "pinDigests": true,
            "extractVersion": "^(?<version>v?\\d+\\.\\d+\\.\\d+)$",
            "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
        },
        {
            "matchDepTypes": ["engines", "peerDependencies"],
            "rangeStrategy": "auto"
        }
    ]
}
